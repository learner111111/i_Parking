<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shijianxianshi"
        android:textSize="25sp"
        android:text="停车时间"
        android:background="@color/colorPray" />

    <TextView
        android:id="@+id/shijianxianshi2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/colorPray"
        android:textSize="24sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feiyongxianshi"
        android:textSize="25sp"
        android:text="费用"
        android:background="@color/colorPray" />

    <TextView
        android:id="@+id/feiyongxianshi2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPray"
        android:layout_weight="1"
        android:textSize="24sp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.example.lvmingzhen.intelligentparking.MyZoomImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:src="@drawable/shilitu" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击最优车位或最优出口可为您导航哦"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    <Button
        android:id="@+id/zuiyouchewei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:text="最优车位为" />

    <TextView
        android:id="@+id/zuiyouchewei2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:textSize="24sp" />

    <Button
        android:id="@+id/zuiyouchukou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:text="最优出口为" />

    <TextView
        android:id="@+id/zuiyouchukou2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>
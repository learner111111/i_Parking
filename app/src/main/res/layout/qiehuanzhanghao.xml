<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPray"
        android:layout_marginTop="40sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dangqianzhanghao"
        android:textSize="24sp"
        android:text="当前的账号为" />

    <TextView
        android:id="@+id/dangqianzhanghao2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="显示当前手机号"
        android:textAlignment="center"
        android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/qiehuanzhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPray"
        android:text="请选择要切换的账号"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="40sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zhanghao"
        android:layout_marginTop="40sp"></Spinner>

</LinearLayout>
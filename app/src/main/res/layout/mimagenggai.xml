<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yuanmima"
        android:text="原密码"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/yuanmima2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="22dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yuanmima2"
        android:hint="请输入原密码"
        android:maxLength="17"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/xinmima2"
        app:layout_constraintBaseline_toBaselineOf="@+id/yuanmima"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/xinmima2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xinmima"
        android:text="新密码"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="69dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/xinmima2"
        android:layout_marginLeft="69dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xinmima2"
        android:hint="请输入新密码"
        android:maxLength="17"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="22dp"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@+id/yuanmima2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/xinmima"
        android:layout_marginLeft="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xinmima3"
        android:text="确认新密码"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="175dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xinmima4"
        android:hint="请再次输入新密码"
        android:maxLength="17"
        android:layout_marginStart="22dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/xinmima3"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/xinmima3"
        android:layout_marginLeft="22dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xiugai"
        android:text="确认修改"
        android:background="@color/colorPrimary"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="114dp"
        app:layout_constraintRight_toRightOf="@+id/xinmima4"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/xinmima4"
        android:layout_marginRight="114dp" />

</android.support.constraint.ConstraintLayout>
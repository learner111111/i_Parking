<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/jiemian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ziliao"
            android:layout_above="@+id/mimaxiugai"
            android:layout_toRightOf="@+id/mimaxiugai"
            android:text="个人资料"
            android:background="@color/colorPrimary" />
        <Button
            android:id="@+id/mimaxiugai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/kabao"
            android:layout_toLeftOf="@+id/kabao"
            android:background="@color/colorPrimary"
            android:text="密码更改" />
        <Button
            android:id="@+id/shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/kabao"
            android:layout_toRightOf="@+id/kabao"
            android:background="@color/colorPrimary"
            android:text="设置" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/qianbao"
           android:layout_below="@+id/mimaxiugai"
           android:layout_toLeftOf="@+id/mimaxiugai"
           android:text="钱包"
           android:background="@color/colorPrimary" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:id="@+id/kabao"
           android:text="卡包"
           android:background="@color/colorPrimary" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/bangzhu"
           android:layout_below="@+id/shezhi"
           android:layout_toRightOf="@+id/shezhi"
           android:text="帮助"
           android:background="@color/colorPrimary" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/yijianfankui"
          android:layout_below="@+id/kabao"
          android:layout_toLeftOf="@+id/kabao"
          android:text="意见反馈"
          android:background="@color/colorPrimary" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/zhanghaoqiehuan"
          android:layout_below="@+id/kabao"
          android:layout_toRightOf="@+id/kabao"
          android:text="账号切换"
          android:background="@color/colorPrimary" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tuichudenglu"
          android:layout_below="@+id/yijianfankui"
          android:layout_toRightOf="@+id/yijianfankui"
          android:text="退出登录"
          android:background="@color/colorPrimary" />

</RelativeLayout>